{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "noLib": false,
    "declaration": false
  },
  "include": [
        "./src/**/*"
    ],
   "exclude": [
        "./src/**/*.d.ts",
        "./src/_shared/**/*.*"
    ]
}